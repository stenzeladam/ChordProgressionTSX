{
  "compilerOptions": {
    "target": "es6",                                  // Set JavaScript language version to ES6
    "module": "commonjs",                             // Use CommonJS for Node.js environment
    "lib": ["es6", "ES2015.Promise", "dom"],          // Include ES6 features, Promises, and DOM API
    "jsx": "react-jsx",                               // Support React JSX
    "strict": true,                                   // Enable strict type-checking
    "esModuleInterop": true,                          // Ensure compatibility between CommonJS and ES modules
    "skipLibCheck": true,                             // Skip checking types in declaration files
    "forceConsistentCasingInFileNames": true,         // Enforce consistent casing in file names
    "moduleResolution": "node",                       // Resolve modules in Node.js style
    "outDir": "./dist",                               // Specify the output folder for compiled JavaScript
    "sourceMap": true,                                // Enable source maps for easier debugging
    "resolveJsonModule": true                         // Enable importing JSON files
  },
  "include": ["src/**/*", "tests/**/*"],              // Include all files in src and tests folders
  "exclude": ["node_modules"]                         // Exclude node_modules from compilation
}
